
@model SporSalonuProjesi.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div role="main" class="main">
    <div class="slider-container rev_slider_wrapper" style="height: 100vh;">
        <div id="revolutionSlider" class="slider rev_slider manual" data-version="5.4.8">
            <ul>
                <li data-transition="fade">
                    <img src="@Url.Content("/Slide3.png")"
                         alt=""
                         data-bgposition="center center"
                         data-bgfit="cover"
                         data-bgrepeat="no-repeat"
                         data-bgparallax="1"
                         class="rev-slidebg">
                </li>
                <li data-transition="fade">
                    <img src="@Url.Content("/Slider2.png")"
                         alt=""
                         data-bgposition="center center"
                         data-bgfit="cover"
                         data-bgrepeat="no-repeat"
                         data-bgparallax="1"
                         class="rev-slidebg">
                </li>
            </ul>
            <div class="tp-static-layers">
                <h1 class="tp-caption font-weight-semibold text-color-light tp-static-layer"
                    data-x="center" data-hoffset="0"
                    data-y="center" data-voffset="-50"
                    data-start="800"
                    data-startslide="0"
                    data-endslide="99"
                    data-transform_in="y:[-300%];opacity:0;s:500;" style="font-size: 76px;">Take Action Now</h1>
                <div class="tp-caption font-weight-normal text-color-light text-uppercase tp-static-layer"
                     data-x="center" data-hoffset="0"
                     data-y="center" data-voffset="0"
                     data-start="800"
                     data-startslide="0"
                     data-endslide="99"
                     data-transform_in="y:[-300%];opacity:0;s:500;" style="font-size: 22px;">Get ready and start our free trail</div>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-primary tp-caption text-uppercase text-color-light custom-font-weight-medium tp-static-layer"
                   data-x="center" data-hoffset="0"
                   data-y="center" data-voffset="80"
                   data-start="1500"
                   data-startslide="0"
                   data-endslide="99"
                   data-fontsize="['15','15','15','24']"
                   data-lineheight="['17','17','17','26']"
                   style="padding: 15px 25px;"
                   data-transform_in="y:[-300%];opacity:0;s:500;">Join Now</a>
            </div>
        </div>
    </div>
    <section class="section section-center section-no-border section-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <h2 class="font-weight-bold text-color-quaternary appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="0"><span class="text-color-primary">Get Up!</span> Challenge yourself today</h2>
                    <p class="appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="150">Stop waiting for the perfect moment; that moment is now. Every step you take into the gym is a victory against excuses. Whether you're lifting heavier, running faster, or just showing up on a day you didn't want to, you are building a stronger version of yourself. Embrace the burn, push past your limits, and remember that consistency is what transforms effort into results. Your future self will thank you for the dedication you show today.</p>
                    <a class="btn btn-primary custom-btn-style-1 text-uppercase text-color-light custom-font-weight-medium text-2 appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="300" asp-controller="AboutUs" asp-action="Index">About the Gym</a>
                </div>
            </div>
        </div>
    </section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 position-relative p-0">
                <!-- DİNAMİK BÖLÜM: FİYAT PLANLARI (PACKAGES) -->
                <section class="packages section-background custom-squared-section custom-small-section-padding custom-overlay-style-1" style="background: url('@Url.Content("~/background.png")'); background-size: cover;">
                    <h2 class="text-color-light font-weight-bold">Our Packages</h2>
                    <ul class="custom-list-style-1">
                        @foreach(var plan in Model.PricingPlans)
                        {
                            <li>
                                <span class="custom-list-item text-color-light">@plan.Title</span>
                                <span class="custom-list-value text-color-light">: @plan.PricePerMonth.ToString("C") / month</span>
                            </li>
                        }
                    </ul>
                    <a class="btn btn-quaternary custom-btn-style-4 text-uppercase text-color-light custom-font-weight-medium text-2" asp-controller="Price" asp-action="Index">Pricing</a>
                </section>
            </div>
            <!-- DÜZELTİLMİŞ KOD BLOĞU -->
            <div class="col-lg-4 position-relative p-0">
                <!-- DİNAMİK BÖLÜM: DERSLER (CLASSES) -->
                <!-- HATA 1: CSS sınıfı düzeltildi (boşluk kaldırıldı) -->
                <!-- HATA 3: Arka plan yolunu kontrol et, orijinali yorumda -->
                <section class="classes section-background custom-squared-section custom-small-section-padding"
                         style="background-image: url('@Url.Content("~/classimg.png")'); background-size: cover;">
                    <!-- Orijinal yol: style="background-image: url('@Url.Content("~/img/demos/gym/carousels/classes.jpg")'); ..." -->

                    <h2 class="text-color-light font-weight-bold">Our Classes</h2>
                    <div class="owl-carousel nav-bottom custom-dots-style-1 custom-dots-bottom-left-1" data-plugin-options="{'items': 1, 'loop': false, 'dots': true, 'nav': false}">
                        <div>
                            <ul class="custom-list-style-1">
                                @foreach (var gymClass in Model.GymClasses)
                                {
                                    <li>
                                        <span class="custom-list-item custom-list-item-spacing-2 text-color-light">

                                            @if (gymClass.Name.ToLower().Contains("yoga"))
                                            {
                                                <img class="custom-icon" src="@Url.Content("~/yoga-pose.png")" alt="Yoga" />
                                            }
                                            else if (gymClass.Name.ToLower().Contains("fitness"))
                                            {
                                                <img class="custom-icon" src="@Url.Content("~/running (1).png")" alt="Fitness" />
                                            }
                                            else if (gymClass.Name.ToLower().Contains("spin class"))
                                            {
                                                <img class="custom-icon" src="@Url.Content("~/spin-class.png")" alt="Spin" />
                                            }
                                            else
                                            {
                                                <img class="custom-icon" src="@Url.Content("~/zumba (1).png")" alt="Class" />
                                            }
                                            @gymClass.Name
                                        </span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <a class="btn btn-quaternary custom-btn-style-4 text-uppercase text-color-light custom-font-weight-medium text-2" asp-controller="Classes" asp-action="Index">View Classes</a>
                </section>
            </div>
            <div class="col-lg-4 position-relative p-0">
                <!-- STATİK BÖLÜM: FACILITY (TESİS) -->
                <h2 class="text-color-light font-weight-bold custom-title-position-1">Our Facility</h2>
                <div class="owl-carousel nav-bottom custom-dots-style-1 custom-dots-position-1 m-0" data-plugin-options="{'items': 1, 'animateOut': 'fadeOut', 'loop': false, 'dots': true, 'nav': false}">
                    <div class="custom-overlay-style-1 custom-squared-section custom-small-section-padding" style="background: url('@Url.Content("~/fec.png")'); background-size: cover;">
                        <ul class="custom-list-style-1 custom-space-1">
                            <li>
                                <span class="custom-list-item custom-list-item-spacing-2 text-color-light">
                                    <img class="custom-icon" src="@Url.Content("~/gym.png")" />
                                    Best Trainers
                                </span>
                            </li>
                            <!-- ... (diğer statik tesis özellikleri) ... -->
                             <li>
                                <span class="custom-list-item custom-list-item-spacing-2 text-color-light">
                                    <img class="custom-icon" src="@Url.Content("~/clock.png")" />
                                    Flexible Timing
                                </span>
                            </li>
                            <li>
                                <span class="custom-list-item custom-list-item-spacing-2 text-color-light">
                                    <img class="custom-icon" src="@Url.Content("~/treadmill (1).png")"  />
                                    Cardio Programs
                                </span>
                            </li>
                            <li>
                                <span class="custom-list-item custom-list-item-spacing-2 text-color-light">
                                    <img class="custom-icon" src="@Url.Content("~/physiotherapist.png")" alt />
                                    Physiotherapist
                                </span>
                            </li>
                        </ul>
                    </div>
                     <!-- ... (diğer statik carousel sayfaları) ... -->
                </div>
                <a class="btn btn-quaternary custom-btn-style-4 text-uppercase text-color-light custom-font-weight-medium text-2" asp-controller="AboutUs" asp-action="Index">Learn More</a>
            </div>
        </div>
    </div>
    <section class="section section-center section-no-border section-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-8 col-lg-4 appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="0">
                    <img src="@Url.Content("~/personal-trainer.png")" class="mb-2" alt />
                    <h2 class="font-weight-bold text-color-quaternary">Trainers</h2>
                    <p>Our certified personal trainers are dedicated to your success. They provide expert guidance, personalized workout plans, and the motivation you need to reach your fitness goals safely and effectively.</p>
                    <a class="btn btn-primary custom-btn-style-1 text-uppercase text-color-light custom-font-weight-medium" asp-controller="Trainers" asp-action="Index" title="Meet The Staff">Meet the Staff</a>
                </div>
                <div class="col-sm-8 col-lg-4 custom-sm-margin-1 appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="300">
                    <img src="@Url.Content("~/membership-card.png")" class="mb-2" alt />
                    <h2 class="font-weight-bold text-color-quaternary">Become a Member</h2>
                    <p>Start your fitness journey with us today. Our membership plans offer full access to state-of-the-art equipment, diverse classes, and a supportive community dedicated to helping you succeed.</p>
                    <a class="btn btn-primary custom-btn-style-1 text-uppercase text-color-light custom-font-weight-medium" asp-controller="Contact" asp-action="Index" title="Join Now">Join Now</a>
                </div>
                <div class="col-sm-8 col-lg-4 custom-sm-margin-1 appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="600">
                    <img src="@Url.Content("~/group-chat.png")" class="mb-2" alt />
                    <h2 class="font-weight-bold text-color-quaternary">Group Fitness</h2>
                    <p>Experience the energy of our group fitness classes! From high-intensity interval training (HIIT) to relaxing yoga, our schedule is packed with dynamic workouts led by inspiring instructors.</p>
                    <a class="btn btn-primary custom-btn-style-1 text-uppercase text-color-light custom-font-weight-medium" asp-controller="Classes" asp-action="Index" title="Learn More">Learn More</a>
                </div>
            </div>
        </div>
    </section>
    <section class="section section-no-border section-quaternary custom-section-featured-image">
        <div class="custom-image-container d-none d-lg-block">
            <img src="@Url.Content("~/Boxer.png")" class="img-fluid" alt />
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="testimonial testimonial-style-2 testimonial-with-quotes custom-testimonial-style-1 mb-0">
                        <blockquote>
                            <p>Training here completely transformed my preparation.The facilities are world-class, but it’s the dedicated trainers and the intense, focused atmosphere that make the real difference. I've never felt stronger or more prepared for a fight. This place isn't just a gym; it's where champions are built.</p>
                        </blockquote>
                        <div class="testimonial-author">
                            <p><strong class="text-color-light custom-font-weight-medium">Judy Jackson</strong><span>Boxer</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 position-relative p-0">
                <section class="resources section-background custom-wide-section custom-small-section-padding-2 custom-overlay-style-2" style="background: url('@Url.Content("resources.jpg")'); background-size: cover;">
                    <h2 class="text-color-light font-weight-bold">Resources</h2>
                    <div class="owl-carousel custom-dots-style-2 custom-dots-bottom-left-1" data-plugin-options="{'items': 1, 'loop': false, 'dots': true, 'nav': false}">
                        <div class="custom-resources-style">
                            <span class="number bg-color-primary text-color-light">1</span>
                            <span class="content">
                                <span class="title text-color-light">
                                    How to get start
                                </span>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ut nisl nunc. Vestibulum.</p>
                            </span>
                        </div>
                        <div class="custom-resources-style">
                            <span class="number bg-color-primary text-color-light">2</span>
                            <span class="content">
                                <span class="title text-color-light">
                                    How to get start
                                </span>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ut nisl nunc. Vestibulum.</p>
                            </span>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-lg-6 position-relative p-0">
                <section class="working-hours section-background custom-wide-section custom-small-section-padding-2 custom-overlay-style-2" style="background: url('@Url.Content("~/Worktime.png")'); background-size: cover;">
                    <br />
                    <br />
                    <ul class="custom-list-style-1 ps-0">
                        <li>
                            <span class="custom-list-item custom-spacing-1 text-color-light custom-font-weight-medium">Mon - Fri</span>
                            <span class="custom-list-value custom-text-color-1">: 5.30am - 11.00pm</span>
                        </li>
                        <li>
                            <span class="custom-list-item custom-spacing-1 text-color-light custom-font-weight-medium">Saturday</span>
                            <span class="custom-list-value custom-text-color-1">: 5.30am - 1.00pm</span>
                        </li>
                        <li>
                            <span class="custom-list-item custom-spacing-1 text-color-light custom-font-weight-medium">Sunday</span>
                            <span class="custom-list-value custom-text-color-1">: Closed</span>
                        </li>
                    </ul>
                </section>
            </div>
        </div>
    </div>
    <!-- Google Maps - Go to the bottom of the page to change settings and map location. -->
    <div id="googlemaps" class="google-map m-0" style="height: 425px;"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.6732986336624!2d30.348843275904496!3d40.74721377138831!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccb27a686f1d15%3A0xa7594271a4d1d216!2sKemalpa%C5%9Fa%2C%20%C3%9Cniversite%20Cd.%20No%3A33%2C%2054050%20Serdivan%2FSakarya!5e0!3m2!1sen!2str!4v1762120833055!5m2!1sen!2str" width="1550" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></div>
</div>





