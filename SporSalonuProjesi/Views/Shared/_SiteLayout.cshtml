@using Microsoft.AspNetCore.Identity
@using SporSalonuProjesi.Data.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en" class="sticky-header-reveal">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Spor Salonu</title>

    <meta name="keywords" content="WebSite Template" />
    <meta name="description" content="Porto - Multipurpose Website Template">
    <meta name="author" content="okler.net">

    <!-- Favicon -->
    <link rel="shortcut icon" href="@Url.Content("~/YaslamLogo.ico")" type="image/x-icon" />
    <link rel="apple-touch-icon" href="@Url.Content("~/YaslamLogo.ico")">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">

    <!-- Web Fonts  -->
    <link id="googleFonts" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="@Url.Content("~/vendor/bootstrap/css/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/bootstrap/js/bootstrap.bundle.min.js")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/fontawesome-free/css/all.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/animate/animate.compat.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/simple-line-icons/css/simple-line-icons.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/owl.carousel/assets/owl.carousel.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/owl.carousel/assets/owl.theme.default.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/magnific-popup/magnific-popup.min.css")">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/theme.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/theme-elements.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/theme-blog.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/theme-shop.css")">

    <!-- Revolution Slider CSS -->
    <link rel="stylesheet" href="@Url.Content("~/vendor/rs-plugin/css/settings.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/rs-plugin/css/layers.css")">
    <link rel="stylesheet" href="@Url.Content("~/vendor/rs-plugin/css/navigation.css")">

    <!-- Demo CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/demo-gym.css")">

    <!-- Skin CSS -->
    <link id="skinCSS" rel="stylesheet" href="@Url.Content("~/css/skin-gym.css")">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="body">
        <header id="header" class="header-floating-bar header-floating-bar-static-sticky" data-plugin-options="{'stickyEnabled': true, 'stickyEffect': 'reveal', 'stickyEnableOnBoxed': true, 'stickyEnableOnMobile': false, 'stickyStartAt': 0, 'stickySetTop': '0px', 'stickyChangeLogo': false}">
            <div class="header-body bg-color-dark box-shadow-none">
                <div class="header-container header-container-height-sm container-fluid px-4">
                    <div class="header-row">
                        <div class="header-column" style="flex: 0 0 auto;">
                            <div class="header-row">
                                <div class="header-logo">
                                    <a asp-controller="Home" asp-action="Index">
                                        <img alt="Porto Gym" width="140" height="60" src="@Url.Content("~/Yaslam.png")">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="header-column justify-content-center flex-grow-1">
                            <div class="header-row w-100 justify-content-center">
                                <div class="header-nav header-nav-links header-nav-dropdowns-dark header-nav-force-light-text header-nav-force-light-text-active-skin-color">
                                    <div class="header-nav-main header-nav-main-mobile-dark header-nav-main-dropdown-no-borders header-nav-main-clone-items header-nav-main-slide header-nav-main-square header-nav-main-effect-2 header-nav-main-sub-effect-1">
                                        <nav class="collapse">
                                            <ul class="nav nav-pills justify-content-center" id="mainNav">
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="AboutUs" asp-action="Index">About Us</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="Classes" asp-action="Index">Classes</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="Trainers" asp-action="Index">Trainers</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="Price" asp-action="Index">Pricing</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact Us</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-controller="Home" asp-action="Contact">Ai </a>
                                                </li>
                                               @*  @if (SignInManager.IsSignedIn(User) && User.IsInRole("Uye"))
                                                { *@
                                                    <li class="nav-item">
                                                        <a class="nav-link" asp-controller="Appointment" asp-action="Index">Take an appointment</a>
                                                    </li>
                                               @*  } *@
                                                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Uye"))
                                                {
                                                    <li class="nav-item">
                                                        <a class="nav-link" asp-controller="Appointment" asp-action="MyBookings">My Appointments</a>
                                                    </li>
                                                }
                                                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                                                {
                                                    <li class="nav-item">
                                                        <a class="nav-link fw-bold text-warning" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Panel</a>
                                                    </li>
                                                }
                                            </ul>
                                        </nav>
                                    </div>
                                    <button class="btn header-btn-collapse-nav" data-bs-toggle="collapse" data-bs-target=".header-nav-main nav">
                                        <i class="fas fa-bars"></i>
                                    </button>
                                </div>

                                <div class="d-none d-lg-flex order-1 order-lg-2 ms-auto">
                                    <partial name="_LoginPartial" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()

        <footer id="footer" class="bg-color-quaternary">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <ul class="social-icons custom-social-icons">
                            <li class="social-icons-instagram"><a href="http://www.instagram.com/" target="_blank" title="Instagram"><i class="fab fa-instagram"></i></a></li>
                            <li class="social-icons-facebook"><a href="http://www.facebook.com/" target="_blank" title="Facebook"><i class="fab fa-facebook-f"></i></a></li>
                            <li class="social-icons-x"><a href="http://www.x.com/" target="_blank" title="X"><i class="fab fa-x-twitter"></i></a></li>
                            <li class="social-icons-googleplus"><a href="http://www.google.com/" target="_blank" title="Google Plus"><i class="fab fa-google-plus-g"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-lg-12 text-center">
                        <p>2025 © Porto <strong class="text-color-light font-weight-normal">The Gym</strong> Copyright All Rights Reserved.</p>
                    </div>
                </div>
            </div>
        </footer>

    </div>

    <!-- Vendor -->
    <script src="@Url.Content("~/vendor/jquery/jquery.min.js")"></script>
 
    <script src="@Url.Content("~/vendor/plugins/js/plugins.min.js")"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="@Url.Content("~/js/theme.js")"></script>

    <!-- Revolution Slider Scripts -->
    <script src="@Url.Content("~/vendor/rs-plugin/js/jquery.themepunch.tools.min.js")"></script>
    <script src="@Url.Content("~/vendor/rs-plugin/js/jquery.themepunch.revolution.min.js")"></script>

    <!-- Demo -->
    <script src="@Url.Content("~/js/demo-gym.js")"></script>
    <script src="@Url.Content("~/js/view.contact.js")"></script>

    <!-- Theme Initialization Files -->
    <script src="@Url.Content("~/js/theme.init.js")"></script>

    <script>
        // Fix for dynamic menu items
        $(document).ready(function() {
            // Force the navigation to reinitialize
            if (typeof theme !== 'undefined' && theme.Nav) {
                theme.Nav.initialize();
            }

            // Ensure the nav is visible on desktop
            if ($(window).width() >= 992) {
                $('.header-nav-main nav').addClass('show');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>